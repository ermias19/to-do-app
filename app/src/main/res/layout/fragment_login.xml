    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">

        <com.chaos.view.PinView
            android:id="@+id/pin"

            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="24dp"
            android:cursorVisible="true"
            android:hint="Hint."
            android:inputType="numberPassword"
            android:itemBackground="@color/color_68AAFF"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:cursorColor="#E0D8D0"
            app:hideLineWhenFilled="true"
            app:itemCount="4"
            app:itemHeight="55dp"
            app:itemRadius="5dp"

            app:itemSpacing="10dp"
            app:itemWidth="55dp"

            app:layout_constraintBottom_toTopOf="@+id/num"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.636"
            app:lineColor="#000000"
            app:lineWidth="2dp"
            app:viewType="rectangle" />

        <LinearLayout
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin"
                app:layout_constraintVertical_bias="0.232">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:minWidth="100dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/num"
                    android:backgroundTint="@color/black"
                    android:minWidth="100dp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="40sp"

                    />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin"
                app:layout_constraintVertical_bias="0.232">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:theme="@style/num" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="40sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin"
                app:layout_constraintVertical_bias="0.232">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:theme="@style/num" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/num"
                    android:maxWidth="100dp"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="40sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:layout_marginVertical="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pin"
                app:layout_constraintVertical_bias="0.232">

                <Button
                    android:id="@+id/none"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:maxWidth="100dp"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:theme="@style/num" />

                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/num"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button

                    android:id="@+id/del"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/numberkeyboard_ic_backspace_normal"
                    android:maxWidth="100dp" />
            </LinearLayout>


        </LinearLayout>


